<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/black_helper_list_item_catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#E0E0E0"
        android:paddingBottom="5dip"
        android:paddingLeft="20dip"
        android:paddingTop="5dip"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:gravity="center" >

            <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
                android:id="@+id/black_helper_list_item_imageView_head"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:scaleType="centerCrop"
                android:src="@drawable/default_head" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/black_helper_list_item_textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingTop="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/black_helper_list_item_textView_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="10dip"
                android:paddingTop="1dp"
                android:textColor="#a9a9a9"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/targetMember_dividingLine"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="#d3d3d3" />

        <com.helper.mistletoe.v.MyTextViewButton
            android:id="@+id/black_helper_list_item_myButton_remove"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/black_helper_list_item_mybutton"
            android:textColor="#4a66ad"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>