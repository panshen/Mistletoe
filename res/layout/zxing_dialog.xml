<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:layout_centerInParent="true"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
                android:id="@+id/zxing_dialog_imageView_head"
                android:layout_width="75dip"
                android:layout_height="75dip"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:src="@drawable/default_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dip" >
                <TextView
                    android:id="@+id/zxing_dialog_textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/zxing_dialog_textView_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/zxing_dialog_imageView_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="扫一扫上面的二维码图案，加我帮手"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>