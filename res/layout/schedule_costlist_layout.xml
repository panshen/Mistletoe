<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_a"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/schedule_costlist_layout_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/schedule_costlist_layout_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:layout_margin="15dp"
                android:id="@+id/sendemailbutton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sendmail" />

            <TextView
                android:id="@+id/schedule_costlist_layout_imageView_add"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:padding="11dp"
                android:scaleType="centerCrop"
                android:text="再记一笔"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0"
        android:paddingLeft="12dp"
        android:text="当前目标内金额"
        android:textColor="#a9a9a9" />

    <com.helper.mistletoe.v.HorizontalListView
        android:id="@+id/schedule_costlist_layout_horizontalListView"
        android:layout_width="match_parent"
        android:layout_height="30dip" >
    </com.helper.mistletoe.v.HorizontalListView>

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_gravity="center"
        android:background="#17a5ca" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="余额："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/schedule_costlist_layout_textView_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="元"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="预算："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/schedule_costlist_layout_textView_income_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="元"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="#a9a9a9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="支出："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/schedule_costlist_layout_textView_expenditure_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="元"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0"
        android:paddingLeft="12dp"
        android:text="费用明细"
        android:textColor="#a9a9a9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/schedule_costlist_layout_textView_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="全部"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/schedule_costlist_layout_textView_expenditure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支出"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/schedule_costlist_layout_textView_income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="预算"
            android:textSize="18sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/schedule_costlist_layout_listView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:background="#ffffff"
        android:divider="#50C0C0C0"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>