<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/temp_MistletoeBackground" >

    <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
        android:id="@+id/test_MainImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/test_StartShowImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/temp_MistletoeMainColor"
        android:text="开始显示"
        android:textColor="@color/temp_MistletoeBackground"
        android:textSize="22sp" />

    <DigitalClock
        android:id="@+id/test_textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextClock"
        android:textColor="@color/temp_MistletoeMainColor" />

</RelativeLayout>