<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_helper_item"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/helper_fragment_item_catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="2dip"
        android:paddingLeft="12dip"
        android:paddingTop="2dip"
        android:text="@string/helper_fragment_item_catalog"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:gravity="center" >

            <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
                android:id="@+id/helper_fragment_item_imageView_head"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="56dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/helper_fragment_item_helperName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left|center_vertical"
                android:paddingTop="2dp"
                android:paddingLeft="10dip"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/helper_fragment_item_personalComment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="1dp"
                android:paddingLeft="10dip"
                android:textSize="12sp"
                android:textColor="#a9a9a9"  />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>