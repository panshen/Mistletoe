<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/group_list_dialog_textView_title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:text="@string/group_list_dialog_textView_title"
        android:background="@color/main_color"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/group_list_dialog_linearLayout_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
         android:background="@color/main_color"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/group_list_dialog_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/group_list_dialog_button_yes" 
            android:textColor="#ffffff"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/group_list_dialog_button_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/group_list_dialog_button_no"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/linearLayout_contact_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/group_list_dialog_linearLayout_button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/group_list_dialog_textView_title" >

            <RadioGroup
                android:id="@+id/group_list_dialog_radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical" >
            </RadioGroup>

    </ScrollView>
</RelativeLayout>