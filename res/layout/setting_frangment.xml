<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0" >

    <LinearLayout
        android:id="@+id/setting_frangment_linearLayout_personal"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dip"
        android:background="@drawable/button_press"
        android:orientation="horizontal" >

        <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
            android:id="@+id/setting_frangment_imageView_personal_head"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dip" >

            <TextView
                android:id="@+id/setting_frangment_textView_personal_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/setting_frangment_textView_personal_comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/setting_frangment_imageView_code"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/code_default" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="12dp"
        android:text="@string/setting_fragment_my_material"
        android:textColor="#a9a9a9" />

    <ImageView
        android:id="@+id/setting_frangment_imageView_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_frangment_linearLayout_personal"
        android:contentDescription="@string/app_name"
        android:src="@drawable/my_hline" />

    <LinearLayout
        android:id="@+id/setting_frangment_linearLayout_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/setting_frangment_imageView_line"
        android:background="@color/white"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/setting_frangment_imageView_targetCount"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/targetcount_p" />

            <TextView
                android:id="@+id/setting_frangment_textView_targetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_fragment_target_count" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/setting_frangment_imageView_helperCount"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/helpercount_p" />
             <TextView
                android:id="@+id/setting_frangment_textView_helperCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_fragment_helper_count" />

           
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/setting_frangment_imageView_coinCount"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/coincount_p" />
              <TextView
                android:id="@+id/setting_frangment_textView_coinCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_fragment_coin_count" />

          
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/setting_frangment_textview_functioin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_frangment_linearLayout_count"
        android:paddingLeft="10dp"
        android:text="@string/setting_fragment_other_features"
        android:textColor="#a9a9a9" />

    <LinearLayout
        android:id="@+id/setting_frangment_linearLayout_functioin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_frangment_textview_functioin"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/setting_frangment_linearLayout_richScan"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:paddingLeft="15dp"
            android:background="@drawable/button_press"
            android:gravity="center" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/scan" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_fragment_richScan"
                android:textSize="16sp"  />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/my_hline" />

        <LinearLayout
            android:id="@+id/setting_frangment_linearLayout_shake"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:paddingLeft="15dp"
            android:background="@drawable/button_press"
            android:gravity="center" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/shake" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_fragment_shake"
                android:textSize="16sp"  />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/my_hline"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />
        <!-- 

        <LinearLayout
            android:id="@+id/setting_frangment_linearLayout_health"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:paddingLeft="15dp"
            android:background="@drawable/button_press"
            android:gravity="center" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/health" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_fragment_health"
                android:textSize="16sp" />
        </LinearLayout>
         -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/my_hline" />

        <LinearLayout
            android:id="@+id/setting_frangment_linearLayout_setting"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:paddingLeft="15dp"
            android:background="@drawable/button_press"
            android:gravity="center" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_fragment_setting"
                android:textSize="16sp"  />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>