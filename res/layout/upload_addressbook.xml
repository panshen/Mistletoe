<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/temp_MistletoeMainColor"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" >

            <Button
                android:id="@+id/upload_addressbook_button_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="#00FFFFFF"
                android:text="跳过"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="还差一步！"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            android:text="就可以使用海豹了！"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/upload_addressbook_textView_explain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="亲，\n如果需要我们自动帮您匹配通讯录的帮手，请授权我们访问您的通许录。我们在任何情况下都不会泄漏您的隐私给第三方。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <Button
            android:id="@+id/upload_addressbook_button_upload"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/upload_press"
            android:text="上传"
            android:textColor="#ffffff" />
    </RelativeLayout>

</LinearLayout>