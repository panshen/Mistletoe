<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
            android:id="@+id/targetMember_head"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp" >

            <LinearLayout
                style="@style/tar_HalfUpperLower_TargetItem"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/targetMember_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="王老汉"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                style="@style/tar_HalfUpperLower_TargetItem"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/targetMember_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="已同意"
                    android:textColor="@color/darkgray_t9t"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/targetMember_lastUpdateTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="1989/04/20"
                    android:textColor="@color/darkgray_t9t"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/targetMember_leftButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/targetMember_dividingLine"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@color/black" />

            <TextView
                android:id="@+id/targetMember_rightButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/targetMember_theShortcutMenu"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@drawable/shadow"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="2dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/trg_MuteLin"
            style="@style/tar_GeometricLeftRight_TargetItem" >

            <TextView
                style="@style/tar_BottomOptionTest_TargetItem"
                android:text="重新邀请"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trg_addMemeberLin"
            style="@style/tar_GeometricLeftRight_TargetItem" >

            <TextView
                style="@style/tar_BottomOptionTest_TargetItem"
                android:text="删除"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>