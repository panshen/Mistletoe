<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/device_list_relativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@color/main_color" >

        <RelativeLayout
            android:id="@+id/device_list_relativeLayout_back"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:gravity="center" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/device_list_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/device_list_textView_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/device_list_listView_device"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
         android:divider="#50C0C0C0"
        android:dividerHeight="1px">
    </ListView>

</LinearLayout>