<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_helper_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/helperfragment_item_group_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:gravity="center_vertical"
             >

            <ImageView
                android:id="@+id/helperfragment_item_group_imageView"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:layout_marginLeft="10dip"
                android:src="@drawable/new_helper_round" />

            <com.helper.mistletoe.v.redpoint.ReadPoint
                android:id="@+id/helperfragment_item_group_readPoint"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <TextView
            android:id="@+id/helperfragment_item_group_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="新帮手" />
    </LinearLayout>

</LinearLayout>