<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#ffffff"
    android:fillViewport="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/temp_MistletoeMainColor"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="欢迎使用罗盘"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="ReadyGooo!"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="体重(kg):"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/health_index_editText_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="1234567890."
                android:hint="请输入您的手机号码"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                 android:gravity="center"
                android:text="身高(cm):"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/health_index_editText_height"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:digits="1234567890."
                android:hint="输入验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/health_index_textView_result_china"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="验证码已以短信形式发送到您的手机"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/health_index_textView_result_asia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="验证码已以短信形式发送到您的手机"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/health_index_textView_result_world"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="验证码已以短信形式发送到您的手机"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/health_index_button_calculate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:text="确定" />

</LinearLayout>