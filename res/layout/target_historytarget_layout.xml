<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:baselineAligned="false"
         android:background="@drawable/title_a"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
             android:background="@drawable/title_a"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/searchViddddddddew_main_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/searchxxxxxView_main_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <SearchView
                android:id="@+id/searchView_main_fragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/imageButton_main_fragment_menufwefwfwfwfwefwf"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_press" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lllayout"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/target_historyac_layout_deleted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/target_historyac_layout_textview_deleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="归档目标"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/main_fragment_title_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/target_historyac_layout_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:saveEnabled="false" >

                <TextView
                    android:id="@+id/target_historyac_layout_textview_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="删除目标"
                    android:textColor="#f5f5f5"
                    android:textSize="@dimen/main_fragment_title_text" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/target_historyac_layout_imageview_line"
            android:layout_width="200dp"
              android:layout_height="3dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
            android:contentDescription="@string/app_name" >
        </ImageView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main_fragment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>