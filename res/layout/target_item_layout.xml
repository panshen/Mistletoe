<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/blured" />

    <LinearLayout
        android:id="@+id/trg_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:background="@drawable/press"
            android:id="@+id/trg_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/trg_color"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp" >
            </ImageView>

            <RelativeLayout
                android:layout_width="58dp"
                android:layout_height="66dp" >

                <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
                    android:id="@+id/trg_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />

                <com.helper.mistletoe.v.redpoint.ReadPoint
                    android:id="@+id/trg_head_Rdp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/dashed"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.0"
                    android:orientation="vertical"
                    android:paddingLeft="5dp" >

                    <TextView
                        android:id="@+id/trg_title"
                        style="@style/tar_HalfUpperLower_TargetItem.SingleLineText"
                        android:gravity="center_vertical|left"
                        android:paddingBottom="4dp"
                        android:paddingTop="8dp"
                        android:text="周五下午的冷参会"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/trg_lastSchedule"
                        style="@style/tar_HalfUpperLower_TargetItem.SingleLineText"
                        android:gravity="center_vertical|left"
                        android:paddingBottom="8dp"
                        android:paddingTop="4dp"
                        android:text="刘玉海：大家有钱的捧个钱场，没钱的滚犊子"
                        android:textColor="#90000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/trg_date"
                        style="@style/tar_HalfUpperLower_TargetItem.SingleLineText"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="4dp"
                        android:text="2015/01/30"
                        android:textColor="#90000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/trg_sendState"
                        style="@style/tar_HalfUpperLower_TargetItem"
                        android:contentDescription="@string/app_name"
                        android:cropToPadding="true"
                        android:padding="3dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/create_failed"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 废弃 -->

        <LinearLayout
            android:id="@+id/trg_addButton"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/trg_Mute"
                style="@style/tar_GeometricLeftRight_TargetItem"
                android:text="11" />

            <TextView
                android:id="@+id/trg_toTop"
                style="@style/tar_GeometricLeftRight_TargetItem"
                android:text="11" />

            <TextView
                android:id="@+id/trg_delete"
                style="@style/tar_GeometricLeftRight_TargetItem"
                android:text="11" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>