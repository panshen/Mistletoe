<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <com.helper.mistletoe.v.MyRelativeLayout
        android:id="@+id/schedule_cost_list_item_myRelativeLayout"
        android:layout_width="56dip"
        android:layout_height="56dip"
        android:gravity="center" >

        <com.helper.mistletoe.v.snaimageview.v2.SnaImageViewV2
            android:id="@+id/schedule_cost_list_item_imageView_head"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head" />
    </com.helper.mistletoe.v.MyRelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/schedule_cost_list_item_item_textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dip"
            android:paddingTop="2dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schedule_cost_list_item_textView_cost_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
           
            android:maxLines="1"
            android:paddingLeft="10dip"
            android:paddingTop="1dp"
            android:textColor="#a9a9a9"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/schedule_cost_list_item_money"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical|right"
            android:text="@string/new_helper_list_item_mybutton_five"
            android:textColor="#259b24"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schedule_cost_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical|right"
            android:text="@string/new_helper_list_item_mybutton_five"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>