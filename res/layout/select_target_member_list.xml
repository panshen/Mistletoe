<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/select_target_member_list_relativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@color/main_color" >

        <RelativeLayout
            android:id="@+id/select_target_member_list_relativeLayout_back"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/back" />
        </RelativeLayout>
    </RelativeLayout>

    <com.helper.mistletoe.v.ClearEditText
        android:id="@+id/select_target_member_list_filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="@string/select_group_member_list_search"
        android:singleLine="true"
        android:textSize="15.0dip" />
<!-- 
    <RelativeLayout
        android:id="@+id/select_target_member_list_relativelayout_contacts"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/select_target_member_imageView_contacts"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/contact_helper_round" />

        <TextView
            android:id="@+id/select_target_member_list_textView_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/select_target_member_list_textView_contacts" />
    </RelativeLayout>
 -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <ListView
            android:id="@+id/select_target_member_list_relativeLayout_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:divider="#50C0C0C0"
            android:dividerHeight="1px"/>

        <TextView
            android:id="@+id/select_target_member_list_relativeLayout_textview_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/dialog"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="36.0dip"
            android:visibility="invisible" />

        <com.helper.mistletoe.v.SideBar
            android:id="@+id/select_target_member_list_relativeLayout_sidrbar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/select_target_member_list_linearLayout_modification"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color" >

        <TextView
            android:id="@+id/select_target_member_list_textView_modification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/group_member_list_textView_modification"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/select_target_member_list_textView_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/group_member_list_textView_cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>